{
  "name": "autocliper",
  "version": "1.0.0",
  "description": "CLI tool for automatically generating viral short-form video clips (9:16 vertical) from YouTube videos",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "autocliper": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "build:cjs": "tsup --format cjs --out-dir dist-cjs --target node16",
    "dev": "tsup --watch",
    "pkg:win": "npm run build:cjs && pkg dist-cjs/index.js -t node16-win-x64 -o dist/autocliper-win.exe",
    "pkg:mac": "npm run build:cjs && pkg dist-cjs/index.js -t node16-macos-x64 -o dist/autocliper-macos",
    "pkg:linux": "npm run build:cjs && pkg dist-cjs/index.js -t node16-linux-x64 -o dist/autocliper-linux",
    "pkg:all": "npm run pkg:win && npm run pkg:mac && npm run pkg:linux",
    "hwid": "node bin/cli.js hwid"
  },
  "keywords": [
    "cli",
    "video",
    "youtube",
    "autoclip",
    "short-form",
    "viral"
  ],
  "author": "AutoCliper",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "@deepgram/sdk": "^4.11.3",
    "@google/genai": "^1.38.0",
    "chalk": "^5.6.0",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.0",
    "conf": "^13.1.0",
    "extract-zip": "^2.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.0",
    "nanoid": "^5.0.9",
    "node-machine-id": "^1.1.12",
    "ora": "^9.1.0",
    "undici": "^7.3.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.5",
    "nexe": "^4.0.0-rc.2",
    "pkg": "^5.8.1",
    "tsup": "^8.3.6",
    "typescript": "^5.7.2"
  },
  "pkg": {
    "assets": [
      "scripts/**/*"
    ],
    "outputPath": "dist",
    "scripts": [
      "dist/**/*.js"
    ]
  }
}
